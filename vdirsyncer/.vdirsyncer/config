[general]
status_path = "~/.vdirsyncer/status/"

[pair nextcloud]

a = "nextcloud_local"
b = "nextcloud_remote"
collections = ["from a", "from b"]
conflict_resolution = "b wins"

[storage nextcloud_local]
type = "filesystem"
path = "~/.calendars/"
fileext = ".ics"

[storage nextcloud_remote]
type = "caldav"
url = "https://redtux.dynv6.net/nextcloud/remote.php/dav"
username = "vincent"
password.fetch = ["command", "/home/vincent/.local/bin/getPass.sh", "nextcloud"]

[pair nextcloud_contacts]

a = "contacts_local"
b = "contacts_remote"
collections = ["from a", "from b"]
conflict_resolution = "b wins"

[storage contacts_local]
type = "filesystem"
path = "~/.contacts"
fileext = ".vcf"

[storage contacts_remote]
type = "carddav"
url = "https://redtux.dynv6.net/nextcloud/remote.php/dav"
username = "vincent"
password.fetch = ["command", "/home/vincent/.local/bin/getPass.sh", "nextcloud"]

